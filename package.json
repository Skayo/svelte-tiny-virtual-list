		"publint": "^0.2.12",
		"svelte": "^5.16.1",
		"svelte-check": "^4.1.1",
		"svelte-infinite-loading": "^1.4.0",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2",
		"vite": "^6.0.7",
		"vitest": "^2.1.8"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"type": "module",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "pnpm@9.0.6",
	"keywords": [
		"svelte",
		"virtual",
		"list",
		"scroll",
		"infinite",
		"loading",
		"component",
		"plugin",
		"svelte-components"
	]
